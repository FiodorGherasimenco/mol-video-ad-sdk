{
  "name": "mol-vast-tools",
  "private": true,
  "description": "Collection of VAST tool libraries",
  "author": "MailOnline <fe@mailonline.co.uk>",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "prebuild": "rimraf dist",
    "build": "lerna run build",
    "lint": "eslint --ignore-path .gitignore './**/*.js'",
    "precommit": "npm run lint",
    "prepush": "npm test",
    "start": "echo \"This project has no start script\"",
    "test": "NODE_ENV=test jest",
    "clean": "lerna clean; find . -type f -name 'package-lock.json' -delete; rm -r node_modules"
  },
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/MailOnline/mol-vast-tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/MailOnline/mol-vast-tools.git"
  },
  "homepage": "https://github.com/MailOnline/mol-vast-tools#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/mol-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "debug": false,
          "modules": false,
          "targets": {
            "browsers": [
              "> 1%",
              "last 3 versions",
              "ios > 8",
              "not ie < 10"
            ]
          },
          "useBuiltIns": true
        }
      ],
      "stage-3",
      "react"
    ],
    "plugins": [
      "babel-plugin-transform-class-properties",
      [
        "transform-runtime",
        {
          "helpers": false,
          "polyfill": false,
          "regenerator": true
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.24.1",
    "eslint": "^4.11.0",
    "eslint-config-mailonline": "^8.1.0",
    "eslint-plugin-jsdoc": "^3.2.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "jest-tap-reporter": "^1.6.0",
    "jsdoc": "^3.5.5",
    "lerna": "^2.5.1",
    "mol-conventional-changelog": "^1.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/**/src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/packages/mol-vast-fixtures/",
      "/packages/mol-vast-xml2js/"
    ],
    "moduleNameMapper": {
      "\\.(scss)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!mol-).*",
      "packages/.*/node_modules/(?!mol-).*"
    ]
  }
}
