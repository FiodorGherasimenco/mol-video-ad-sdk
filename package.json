{
  "name": "mol-vast-tools",
  "private": true,
  "description": "Collection of VAST tool libraries",
  "author": "MailOnline <fe@mailonline.co.uk>",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "prebuild": "rimraf dist",
    "build": "lerna run build",
    "lint-scripts": "eslint --ignore-path .gitignore './**/*.js'",
    "lint-styles": "stylelint --ignore-path .gitignore '**/*.{scss,sass,css}'",
    "lint": "npm run lint-scripts && npm run lint-styles",
    "precommit": "npm run lint",
    "prepush": "npm test",
    "start": "echo \"This project has no start script\"",
    "test": "NODE_ENV=test jest"
  },
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/MailOnline/mol-vast-tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/MailOnline/mol-vast-tools.git"
  },
  "homepage": "https://github.com/MailOnline/mol-vast-tools#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/mol-conventional-changelog"
    }
  },
  "babel": {
    "env": {
      "debug": false,
      "test": {
        "presets": [
          "es2015",
          "stage-3"
        ],
        "plugins": [
          "transform-runtime"
        ]
      }
    }
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-jest": "^21.0.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.24.1",
    "eslint": "^4.6.1",
    "eslint-config-mailonline": "^7.1.1",
    "eslint-plugin-jsdoc": "^3.1.2",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.0.2",
    "jest-json-to-tap": "^2.0.0",
    "jest-tap-reporter": "^1.2.0",
    "jsdoc": "^3.5.5",
    "jsdom": "^11.0.0",
    "lerna": "^2.2.0",
    "mol-conventional-changelog": "^1.2.0",
    "node-sass": "^4.5.0",
    "stylelint": "^8.1.1",
    "stylelint-config-mailonline": "^3.0.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/**/src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/packages/mol-vast-fixtures/",
      "/packages/mol-vast-xml2js/"
    ],
    "moduleNameMapper": {
      "\\.(scss)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!mol-).*",
      "packages/.*/node_modules/(?!mol-).*"
    ]
  }
}
