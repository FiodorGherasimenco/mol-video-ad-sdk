{
  "name": "@mol/video-ad",
  "private": true,
  "description": "Mono-repo of VAST libraries that allow Video ads to be served on a browser",
  "author": "MailOnline <fe@mailonline.co.uk>",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "prebuild": "rimraf dist",
    "build": "lerna run build",
    "lint": "eslint --ignore-path .gitignore './**/*.js'",
    "precommit": "npm run lint",
    "prepush": "npm test",
    "start": "cd packages/video-ad-component && npm run storybook && cd -",
    "test": "NODE_ENV=test jest",
    "clean": "lerna clean; find . -type f -name 'package-lock.json' -delete; rm -r node_modules"
  },
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/MailOnline/@mol/video-ad-sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/MailOnline/@mol/video-ad-sdk.git"
  },
  "homepage": "https://github.com/MailOnline/@mol/video-ad-sdk#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/mol-conventional-changelog"
    }
  },
  "babel": {
    "env": {
      "debug": false,
      "test": {
        "presets": [
          "es2015",
          "stage-3"
        ],
        "plugins": [
          "transform-runtime",
          "babel-plugin-transform-class-properties"
        ]
      }
    },
    "presets": [
      [
        "env",
        {
          "debug": false,
          "modules": false,
          "targets": {
            "browsers": [
              "> 1%",
              "last 3 versions",
              "ios > 8",
              "not ie < 10"
            ]
          },
          "useBuiltIns": true
        }
      ],
      "stage-3",
      "react"
    ],
    "plugins": [
      "babel-plugin-transform-class-properties",
      [
        "transform-runtime",
        {
          "helpers": false,
          "polyfill": false,
          "regenerator": true
        }
      ]
    ]
  },
  "dependencies": {
    "whatwg-fetch": "^2.0.3",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "prop-types": "^15.6.0",
    "xml-js": "^1.3.4"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.16",
    "@storybook/react": "^3.2.16",
    "autoprefixer": "^8.0.0",
    "babel-loader": "^7.1.2",
    "css-loader": "^0.28.7",
    "postcss-loader": "^2.0.9",
    "style-loader": "^0.20.2",
    "svg-react-loader": "^0.4.5",
    "webpack": "^3.8.1",
    "babel-core": "^6.25.0",
    "babel-jest": "^22.4.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.11.0",
    "eslint-config-mailonline": "^9.0.0",
    "eslint-plugin-jsdoc": "^3.2.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.0",
    "jest-enzyme": "^4.2.0",
    "jest-tap-reporter": "^1.6.0",
    "jsdoc": "^3.5.5",
    "lerna": "^2.5.1",
    "lodash": "^4.17.4",
    "mockdate": "^2.0.2",
    "mol-conventional-changelog": "^1.2.0",
    "raf-polyfill": "^1.0.0",
    "react": "^16.1.1",
    "stylelint-config-mailonline": "^3.0.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "setupFiles": [
      "./setupTests.js"
    ],
    "collectCoverageFrom": [
      "packages/**/src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/packages/vast-fixtures/",
      "/packages/vast-xml2js/",
      "/packages/video-ad-component/src/stories/"
    ],
    "moduleNameMapper": {
      "\\.(scss)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@mol/).*",
      "packages/.*/node_modules/(?!@mol/).*"
    ]
  }
}
